<div class="flex flex-wrap space-y-4 md:flex-nowrap md:space-y-0">
  <%= render 'shared/settings_nav' %>
  <div class="flex-grow max-w-xl mx-auto">
    <h1 class="text-4xl font-bold mb-4">
      <%= t('about') %>
    </h1>

    <div class="space-y-6">
      <div>
        <h2 class="text-2xl font-semibold mb-3"><%= Docuseal::PRODUCT_NAME %></h2>
        <p class="text-base-content/70 mb-4">
          <%= t('about_description') %>
        </p>
      </div>

      <div class="divider"></div>

      <div>
        <h3 class="text-xl font-semibold mb-3"><%= t('version_information') %></h3>
        <% if Docuseal.version.present? %>
          <div class="flex items-center space-x-3 mb-2">
            <span class="text-lg"><%= t('current_version') %>:</span>
            <a href="https://github.com/docusealco/docuseal/releases" target="_blank" class="badge badge-outline badge-lg">
              v<%= Docuseal.version %>
            </a>
          </div>
          <p class="text-sm text-base-content/60">
            <%= t('version_source_hint') %>
          </p>
        <% else %>
          <p class="text-base-content/70"><%= t('version_not_available') %></p>
        <% end %>
      </div>

      <div class="divider"></div>

      <div>
        <h3 class="text-xl font-semibold mb-3"><%= t('links') %></h3>
        <div class="flex flex-wrap gap-3">
          <a href="<%= Docuseal::GITHUB_URL %>" target="_blank" class="btn btn-outline btn-sm">
            <%= svg_icon('brand_github', class: 'w-5 h-5 mr-2') %>
            <%= t('github') %>
          </a>
          <a href="<%= Docuseal::DISCORD_URL %>" target="_blank" class="btn btn-outline btn-sm">
            <%= svg_icon('brand_discord', class: 'w-5 h-5 mr-2') %>
            <%= t('discord_community') %>
          </a>
          <a href="mailto:<%= Docuseal::SUPPORT_EMAIL %>" class="btn btn-outline btn-sm">
            <%= Docuseal::SUPPORT_EMAIL %>
          </a>
        </div>
      </div>

      <% if DocusealPlus.enabled?(:show_plus_badge) %>
        <div class="divider"></div>
        <div class="alert alert-info">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <div>
            <h4 class="font-semibold"><%= t('modified_version') %></h4>
            <p class="text-sm">
              <%= t('modified_version_description') %>
            </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="w-0 md:w-52"></div>
</div>
